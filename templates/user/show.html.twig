{% extends 'base.html.twig' %}

{% block header_title %}
    <h2>Détail de l'utilisateur</h2>
{% endblock %}

{% block title %}User{% endblock %}

{% block body %}
    <h1>Mon profil</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Username :</th>
                <td>{{ user.username }}</td>
            </tr>
            <tr>
                <th>Email :</th>
                <td>{{ user.email }}</td>
            </tr>
            <tr>
                <th>Email vérifié :</th>
                <td>{{ user.isVerified ? 'Oui' : 'Non' }}</td>
            </tr>
            <tr>
                <th>Rôle :</th>
                <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}"  class="btn btn-success button-spacing">Editer mon profil</a>
    <a href="{{ path('homepage') }}" class="btn btn-primary button-spacing">Retours au menu</a>
    {{ include('user/_delete_form.html.twig') }}
{% endblock %}

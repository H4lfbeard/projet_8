{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block header_title %}
    <h1>Page de connexion</h1>
{% endblock %}

{% block body %}
<form method="post">
    {% if error %}
        <div class="alert alert-danger">{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

    {% if app.user %}
        <div class="mb-3">
            Vous êtes connectés en tant que {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
        </div>
    {% endif %}

    <h3 class="h3 mb-3 font-weight-normal">Mes identifiants</h3>
    <label for="inputEmail">Email</label>
    <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control" style="margin-bottom: 3%;" autocomplete="email" required autofocus>
    <label for="inputPassword">Password</label>
    <input type="password" name="password" id="inputPassword" class="form-control" style="margin-bottom: 3%;" autocomplete="current-password" required>
    <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">

    <button class="btn btn-lg btn-primary" type="submit" style="margin-bottom: 2%;">
        Connexion
    </button>
</form>

<p><a href="{{ path('app_forgot_password_request')}}">Mot de passe oublié</a></p>

<h3>Pas encore de compte chez nous ?</h3>

<a href="{{ path('app_register') }}" class="btn btn-lg btn-primary">Je m'inscris</a>
{% endblock %}
